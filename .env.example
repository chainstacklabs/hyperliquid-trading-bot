# Hyperliquid Sniper Bot Configuration

# Your private key (required for live trading, not needed for paper trading)
HYPERLIQUID_PRIVATE_KEY=your_private_key_here

# Enable paper trading mode (true/false) (default: false)
# When enabled, no real trades will be made
PAPER_TRADING=false

# Starting balance for paper trading in USDC (default: 10000)
PAPER_BALANCE=10000

# Amount in USDC to buy each new token (default: 100)
BUY_AMOUNT_USDC=100

# Slippage tolerance as decimal (0.05 = 5%) (default: 0.05) 
SLIPPAGE=0.05

# How often to check for new tokens in seconds (default: 0.5)
POLL_INTERVAL=0.5